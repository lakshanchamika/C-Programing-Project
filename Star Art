#include<stdio.h>
int main(){
    int x,y,z,a,l;
    printf("your number :- ");
    scanf("%d",&z);
    printf("\n");
    printf("......................................................................................................................");
    printf("\n\n");


    for(x=1;x<=z;x++){
        for(y=1;y<=x;y++){
            printf("%c",'*');
        }
        for(y=1;y<=x;y++){
            printf("%c",' ');
        }
        for(y=1;y<=x;y++){
            printf("%c",'*');
        }
    printf("\n");
    }

    for(x=z-1;x>=1;x--){
        for(y=x;y>=1;y--){
            printf("%c",'*');
        }
        for(y=x;y>=1;y--){
            printf("%c",' ');
        }
        for(y=x;y>=1;y--){
            printf("%c",'*');
        }
    printf("\n");
    }


    return 0;
}
